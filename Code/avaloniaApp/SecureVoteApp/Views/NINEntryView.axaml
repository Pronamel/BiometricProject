<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:SecureVoteApp.ViewModels"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="380"
            x:Class="SecureVoteApp.Views.NINEntryView"
            x:DataType="vm:NINEntryViewModel">

    <Grid Background="#f6f2e6">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            
            <TextBlock Text="Enter Your NIN Details" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" 
                       Foreground="#333"/>
            
            <StackPanel Spacing="15">
                <StackPanel>
                    <TextBlock Text="National Identity Number:" 
                               FontWeight="Medium" 
                               Foreground="#333" 
                               Margin="0,0,0,5"/>
                    <TextBox Width="300" Height="35"/>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Full Name:" 
                               FontWeight="Medium" 
                               Foreground="#333" 
                               Margin="0,0,0,5"/>
                    <TextBox Width="300" Height="35"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,30,0,0">
                    <Button Content="Back" 
                            Width="80" 
                            Height="35"
                            Background="LightGray"
                            FontSize="14"
                            Command="{Binding BackCommand}"/>
                    <Button Content="Continue" 
                            Width="80" 
                            Height="35"
                            Background="LightBlue"
                            FontSize="14"
                            Command="{Binding ContinueCommand}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>