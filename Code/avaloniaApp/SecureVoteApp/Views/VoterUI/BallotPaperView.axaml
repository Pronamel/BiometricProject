<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:vm="using:SecureVoteApp.ViewModels"
            xmlns:views="using:SecureVoteApp.Views.VoterUI"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="380"
            x:Class="SecureVoteApp.Views.VoterUI.BallotPaperView"
            x:DataType="vm:BallotPaperViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:BallotPaperViewModel/>
    </Design.DataContext>

    <Grid Background="#f6f2e6">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Grid - 15% of view -->
        <Grid Grid.Row="0" Background="#e6e6e6">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Spacing="5" Margin="25,0,0,0">
                <TextBlock Text="-Election of the member of parlament for the [Fake] constituency"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="{Binding ReadingCandidateName}"
                           FontSize="16"
                           Foreground="Black"
                           HorizontalAlignment="Left"/>
                
            </StackPanel>
        </Grid>
        
        <!-- Bottom Grid - 85% of view, split into two halves -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Half -->
            <Grid Grid.Column="0" Background="#b92c2c" Margin="15,0,0,10">
                <StackPanel Spacing="20" Margin="20">
                    <!-- voting candidates or parties.  -->
                    <views:CandidateButtonControl ButtonText="John Smith - Labour Party"/>
                    <views:CandidateButtonControl ButtonText="Sarah Johnson - Conservative Party"/>
                    <views:CandidateButtonControl ButtonText="Mike Brown - Liberal Democrats"/>
                </StackPanel>
            </Grid>
            
            <!-- Right Half -->
            <Grid Grid.Column="1" Background="#3a3333" Margin="0,0,15,10">
                <Border Height="1"
                    Background="Gray"
                    Margin="0,10"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>